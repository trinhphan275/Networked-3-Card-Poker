<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="start" prefHeight="600" prefWidth="800" styleClass="anchorPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerController">
    <!-- STARTING SCREEN ELEMENTS -->
    <Label fx:id="Welcome" layoutX="300.0" layoutY="50.0" styleClass="title" text="Welcome to" />
    <Label fx:id="ThreeCardPoker" layoutX="230.0" layoutY="90.0" styleClass="title" text="Three Card Poker Server" />

    <!-- Port Selection Section -->
    <HBox layoutX="200.0" layoutY="250.0" spacing="20" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="250.0">
        <children>
            <Button fx:id="port55" mnemonicParsing="false" text="Port 5555" onAction="#port55Method" prefHeight="50.0" prefWidth="120.0">
                <font>
                    <Font name="Arial" size="18.0" />
                </font>
            </Button>
            <Button fx:id="port56" mnemonicParsing="false" text="Port 5556" onAction="#port56Method" prefHeight="50.0" prefWidth="120.0">
                <font>
                    <Font name="Arial" size="18.0" />
                </font>
            </Button>
            <Button fx:id="port57" mnemonicParsing="false" text="Port 5557" onAction="#port57Method" prefHeight="50.0" prefWidth="120.0">
                <font>
                    <Font name="Arial" size="18.0" />
                </font>
            </Button>
        </children>
    </HBox>

    <!-- Buttons Section -->
    <Button fx:id="startBtn" layoutX="200.0" layoutY="200.0" mnemonicParsing="false" text="Start" onAction="#switchToNextScene">
        <font>
            <Font name="Arial" size="18.0" />
        </font>
    </Button>
    <Button fx:id="exitBtn" layoutX="500.0" layoutY="200.0" mnemonicParsing="false" text="Exit" onAction="#stopServer">
        <font>
            <Font name="Arial" size="18.0" />
        </font>
    </Button>

    <Button fx:id="cancelBtn" layoutX="350.0" layoutY="450.0" mnemonicParsing="false" text="Cancel" onAction="#cancelBtnMethod">
        <font>
            <Font name="Arial" size="18.0" />
        </font>
    </Button>


    <!-- Rotating Card Images -->
    <ImageView fx:id="card1" fitHeight="66.0" fitWidth="50.0" layoutX="140.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
        <image><Image url="@../images/c14.png" /></image>
    </ImageView>
    <ImageView fx:id="card2" fitHeight="66.0" fitWidth="48.0" layoutX="280.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
        <image><Image url="@../images/d14.png" /></image>
    </ImageView>
    <ImageView fx:id="card3" fitHeight="66.0" fitWidth="48.0" layoutX="420.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
        <image><Image url="@../images/s14.png" /></image>
    </ImageView>
    <ImageView fx:id="card4" fitHeight="66.0" fitWidth="48.0" layoutX="560.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
        <image><Image url="@../images/h14.png" /></image>
    </ImageView>



</AnchorPane>
